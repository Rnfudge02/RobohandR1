[
  {
    "name": "Pico ARM GCC",
    "description": "Pico SDK with ARM GCC toolchain",
    "environmentVariables": {
      "PICO_SDK_PATH": "${workspaceFolder}/Dependencies/pico-sdk"
    },
    "preferredGenerator": {
      "name": "Ninja"
    },
    "cmakeSettings": {
      "CMAKE_C_COMPILER": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1/bin/arm-none-eabi-gcc",
      "CMAKE_CXX_COMPILER": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1/bin/arm-none-eabi-g++"
    }
  }
]